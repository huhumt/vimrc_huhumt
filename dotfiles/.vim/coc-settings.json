{
    "diagnostic.errorSign": "❌",
    "diagnostic.hintSign": "H>",
    "diagnostic.infoSign": "I>",
    "diagnostic.warningSign": "⚠️ ",
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextAlign": "after",
    "diagnostic.virtualTextLimitInOneLine": 1,
    "diagnostic.virtualTextLines": 1,
    "diagnostic.virtualTextLevel": "warning",
    "inlayHint.display": false,
    "suggest.virtualText": true,
    "suggest.noselect": true,
    "clangd.path": "/usr/bin/clangd-19",
    "clangd.disableDiagnostics": false,
    "python.pythonPath": "/usr/bin/python3",
    "python.formatting.provider": "ruff",
    "python.linting.ruffEnabled": true,
    "pyright.organizeimports.provider": "ruff",
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.updates.prompt": false,
    "cSpell.language": "en-GB",
    "cSpell.numSuggestions": 20,
    "cSpell.allowCompoundWords": true,
    "cSpell.maxNumberOfProblems": 2000,
    "biome.bin": "/usr/local/bin/biome",
    "biome.requireConfiguration": false,
    "languageserver": {
        "terraform": {
            "command": "tofu-ls",
            "args": ["serve"],
            "filetypes": ["terraform", "tf"],
            "initializationOptions": {},
            "settings": {}
        }
    }
}
